<h1>ログイン</h1>
<div class="row">  
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path)  do |form| %>

      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>

      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>

      <%= form.submit :"Login", class: "form-button" %>
    <% end %>
    <h4>テスト用アカウント</h4>
    <h4>メールアドレス test@example.com</h4>
    <h4>パスワード 123456</h4>
  </div>
  
</div>