<h1>Welcome back!</h1>
<div class="row">  
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path)  do |form| %>

      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>

      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>

      <%= form.submit :"Login", class: "form-button" %>
    <% end %>
  </div>
</div>